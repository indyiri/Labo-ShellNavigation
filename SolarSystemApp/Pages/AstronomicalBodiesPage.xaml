<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SolarSystemApp.Pages.AstronomicalBodiesPage"
             Title="Astronomical Bodies"
             BackgroundColor="Black">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="100" />
                <Setter Property="BackgroundColor" Value="Transparent" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.RowSpan="2" Grid.ColumnSpan="2" Source="starfield.png" Aspect="AspectFill"></Image>
        <Button x:Name="btnEarth" Grid.Row="0" Grid.Column="0" Text="🌎" Clicked="EarthClicked"/>
        <Button x:Name="btnMoon"  Grid.Row="0" Grid.Column="1" Text="🌕" Clicked="MoonClicked"/>
        <Button x:Name="btnSun"   Grid.Row="1" Grid.Column="0" Text="☀️" Clicked="SunClicked"/>
        <Button x:Name="btnComet" Grid.Row="1" Grid.Column="1" Text="☄" Clicked="CometClicked"/>
    </Grid>
</ContentPage>
